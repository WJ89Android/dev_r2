<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/usa_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dp"
        android:orientation="vertical" >
         <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3.0dp"
            android:background="#e0778899" /> 
        <TextView
            android:id="@+id/use_aqi_desc"
            style="@style/forecast_message_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美领馆"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/usa_aqi_index"
                style="@style/ExponentTextStyle"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/aqi_index_shape_green"
                android:gravity="center"
                android:text="277"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/usa_aqi_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="6.0dip"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/usa_aqi_index"
                android:gravity="center"
                android:text="严重污染"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_usa_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5.0dip" >

            <TextView
                android:id="@+id/usa_pm25_value"
                style="@style/forecast_message_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5 : 188" />

            <TextView
                android:id="@+id/usa_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="6.0dip"
                android:gravity="center"
                android:text="更新   09:00"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>