<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:layout_width="100.0dip"
    android:layout_height="90.0dip"
    android:background="@drawable/setting_bg_city_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="100.0dip"
        android:layout_height="50.0dip"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_weather_icon"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="5dp"
            android:background="@drawable/weathericon_graph_01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="2.0dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/ib_city_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/setting_city_delete_selector"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@id/ib_city_delete"
                    android:layout_marginTop="5.0dip"
                    android:padding="2dp"
                    android:text="25°"
                    android:textColor="@android:color/white"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="48.0dip"
                android:layout_height="17.0dip"
                android:background="@drawable/aqi_index_shape_green"
                android:gravity="center"
                android:text="重度污染"
                android:textColor="@android:color/black"
                android:textSize="10.0sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="100.0dip"
        android:layout_height="1.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2.0dip"
        android:background="#ff767b86" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <ImageView
            android:id="@+id/locate"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:background="@drawable/locate_white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="4dp"
            android:text="广州"
            android:textColor="@android:color/white"
            android:textSize="18.0sp" />
    </LinearLayout>

</LinearLayout>