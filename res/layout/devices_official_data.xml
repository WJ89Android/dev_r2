<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/city_official"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00ffffff"
        android:paddingLeft="10dp"
        android:text="官方数据"
        android:textColor="#ffffffff"
        android:textSize="15.0sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/bar_50" />

        <LinearLayout
            android:id="@+id/aqi_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/city_aqi"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:gravity="center"
                android:text="指数"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/show_city_aqi"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_margin="0dp"
                android:background="@drawable/aqi_index_shape_green"
                android:gravity="center"
                android:padding="0dp"
                android:text="123"
                android:textColor="#ffffff"
                android:textSize="24.0sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bar_50" />

        <LinearLayout
            android:id="@+id/pm25_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/city_pm25"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:gravity="right"
                android:text="PM2.5"
                android:textColor="#ffffff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/show_city_pm25"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:gravity="center"
                android:text="46"
                android:textColor="#ffffffff"
                android:textSize="24.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>