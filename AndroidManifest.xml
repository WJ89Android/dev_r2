            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.lvdora.aqi.view.CitySettingActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.lvdora.aqi.view.DeviceShareActivity"
